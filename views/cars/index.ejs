<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/cars/index.css" />
<%- include('../partials/nav') %>

<main>
    <img src="images/screen-shots/frederik-hojfeldt-nielsen-eEpF3zcICfE-unsplash.jpg" alt="Covered Car in Garage." id="index-page-background">
    <div id="card-container">
      <% cars.forEach(car => { %>
        <div class="card" style="width: 18rem;">
          <img src="<%= car.pictureUrl %> " class="card-img-top" alt="Picture of Car.">
          <div class="card text-center">
            <div class="card-body">
              <h3 class="card-title">
                  <%= car.year %>
                  <%= car.make %>
                  <%= car.model %>
                </h3>
                <h4>$<%= car.boughtFor %> </h4>
                <a href="/cars/<%= car._id %>" class="btn btn-primary">Build</a>
              </div>
          </div>
        </div> 
      <% }) %>
    </div>
</main>

<%- include('../partials/footer') %>